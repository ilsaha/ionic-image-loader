{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "rootDir": "./src"
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "angularCompilerOptions": {
    "genDir": "aot"
  }
}
